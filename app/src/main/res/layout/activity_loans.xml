<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fli.salesagentapp.fliagentapp.LoansActivity"
    android:background="@color/app_background"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Loan No."
                    android:textColor="@color/app_text_color"
                    />

                <EditText
                    android:id="@+id/txt_loan_no"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="@drawable/rounded_border"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <Button
                    android:id="@+id/btn_load_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="#00b3a1"
                    android:textSize="15dp"
                    android:text="Details"
                    android:background="#00000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Loan ID"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="0012345"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Client"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="A.B.C. Perera"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Loan"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Loan Name"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Tot. Bal"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_totbal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="10000 Rs."
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Tot. Out"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_totout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="8000 Rs."
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Arrears"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_arrears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="2000 Rs."
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Default"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="1111"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Pay Type"
                    android:textColor="@color/app_text_color"
                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    >
                    <RadioGroup
                        android:id="@+id/radio_paytype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <RadioButton
                            android:onClick="onPayTypeClicked"
                            android:layout_marginLeft="2dp"
                            android:id="@+id/pay_type_cash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:checked="true"
                            android:textSize="15dp"
                            android:textColor="@color/app_text_color"/>

                        <RadioButton
                            android:onClick="onPayTypeClicked"
                            android:id="@+id/pay_type_cheque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cheque"
                            android:textSize="15dp"
                            android:textColor="@color/app_text_color"/>

                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Default"
                    android:textColor="@color/app_text_color"
                    />

                <EditText
                    android:id="@+id/edit_loan_default"
                    android:padding="5dp"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="@drawable/rounded_border"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    android:inputType="number"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Rental"
                    android:textColor="@color/app_text_color"
                    />

                <TextView
                    android:id="@+id/txt_loan_rental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="1111"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="0.4"
                    android:text="Payment"
                    android:textColor="@color/app_text_color"
                    />

                <EditText
                    android:id="@+id/edit_loan_payment"
                    android:padding="5dp"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="@drawable/rounded_border"
                    android:textSize="15dp"
                    android:textColor="@color/app_text_color"
                    android:inputType="number"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_cheque_details"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="0.4"
                        android:text="Cheque"
                        android:textColor="@color/app_text_color"
                        />

                    <EditText
                        android:id="@+id/edit_loan_cheque"
                        android:padding="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:background="@drawable/rounded_border"
                        android:textSize="15dp"
                        android:textColor="@color/app_text_color"
                        android:inputType="number"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="0.4"
                        android:text="Bank"
                        android:textColor="@color/app_text_color"
                        />

                    <EditText
                        android:id="@+id/edit_loan_bank"
                        android:padding="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:background="@drawable/rounded_border"
                        android:textSize="15dp"
                        android:textColor="@color/app_text_color"
                        android:inputType="number"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="0.4"
                        android:text="Date"
                        android:textColor="@color/app_text_color"
                        />

                    <EditText
                        android:id="@+id/edit_loan_date"
                        android:padding="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:background="@drawable/rounded_border"
                        android:textSize="15dp"
                        android:textColor="@color/app_text_color"
                        android:focusable="false"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_pay"
                android:text="Pay"
                android:textColor="#00b3a1"
                android:background="#00000000"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
