<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fli.salesagentapp.fliagentapp.CollectionsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fli.salesagentapp.fliagentapp.CollectionsActivity"
        android:background="@color/app_background">

        <TextView
            android:text="Total Collection: "
            android:textAlignment="center"
            android:id="@+id/txt_total_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/app_text_color"
            android:textSize="15dp"
            android:textStyle="bold" />

            <ListView
                android:layout_below="@id/txt_total_collection"
            android:id="@+id/list_collections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="10dp"
            android:padding="10dp"></ListView>
        <include layout="@layout/layout_progress_bar" />
    </RelativeLayout>


</FrameLayout>
